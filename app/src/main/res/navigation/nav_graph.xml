<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.tekydevelop.radixfm.album.AlbumFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_albums">

        <action
            android:id="@+id/action_Album_to_Details"
            app:destination="@id/SecondFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.tekydevelop.radixfm.details.AlbumDetailsFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_ablum_details">

        <action
            android:id="@+id/action_Details_to_Album"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>